    }).showToast();
    return;
  }

  const formContainer = document.createElement("div");
  formContainer.style.fontFamily = "'Inter', system-ui, sans-serif";

  formContainer.innerHTML = `
    <div class="text-slate-800">
      <h3 class="text-base font-semibold text-red-600 mb-2">
        ⚠️ Anda akan menghapus seluruh data barang <strong>${nama}</strong>!
      </h3>
      <p class="text-sm mb-3 text-slate-700 leading-snug">
        Tindakan ini <strong>tidak dapat dibatalkan</strong>. Jika Anda melanjutkan, seluruh data terkait barang ini akan terhapus dari sistem secara permanen.
      </p>

      <label class="flex items-start space-x-2 bg-slate-50 p-2 rounded-md border border-slate-200 mb-4">
        <input type="checkbox" id="konfirmasiHapus" class="mt-1 accent-red-600">
        <span class="text-sm text-slate-700 leading-tight">Saya memahami dan menyetujui penghapusan seluruh data barang ini secara permanen.</span>
      </label>

      <div class="flex justify-end gap-2">
        <button onclick="batalHapus()" class="bg-slate-200 hover:bg-slate-300 text-slate-800 px-4 py-1.5 rounded text-sm font-medium transition">
          Batal
        </button>
        <button onclick="konfirmasiHapusBarang('${id_barang}', '${nama}', '${jenis_pakaian}', '${gender}', '${harga}')" class="bg-red-500 hover:bg-red-600 text-white px-4 py-1.5 rounded text-sm font-medium transition">
          Hapus Data
        </button>
      </div>
    </div>
  `;

  popupToast = Toastify({
    node: formContainer,
    duration: -1,
    gravity: "top",
    position: "center",
    close: false,
    stopOnFocus: true,
    style: {
      background: "#fef2f2",
      border: "1px solid #fecaca",
      borderRadius: "0.75rem",
      padding: "1rem",
      boxShadow: "0 6px 18px rgba(0,0,0,0.1)",
      width: "360px",
    }
  });

  popupToast.showToast();
  popupAktif = true;
}

function batalHapus() {
  if (popupToast) {
    popupToast.hideToast();
    popupAktif = false;
    popupToast = null;
  }
}

async function konfirmasiHapusBarang(id_barang, nama, jenis_pakaian, gender, harga) {
  const checkbox = document.getElementById("konfirmasiHapus");
  if (!checkbox.checked) {
    alert("Mohon centang kotak persetujuan terlebih dahulu.");
    return;
  }

  try {
    const response = await fetch("/app/endpoint.go", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        tujuan: "Hapus_Barang_Admin_ACC",
        id_barang: `${id_barang}`,
        nama: `${nama}`,
        jenis_pakaian: `${id_barang}`, // <- sesuai aslinya walau kemungkinan typo
        gender: `${gender}`,
        harga: `${harga}`,
      }),
    });

    if (!response.ok) {
      throw new Error("Gagal mengambil data: " + response.statusText);
    }

    const data = await response.json();
    console.log("Data berhasil diambil:", data);

  } catch (error) {
    console.error("Terjadi kesalahan:", error);
    return null;
  }

  alert("✅ Seluruh barang berhasil dihapus dari sistem.");
  if (popupToast) popupToast.hideToast();
}

</script>

