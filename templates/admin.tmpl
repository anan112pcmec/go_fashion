<script>

let popupAktif = false;
let popupToast = null;

function Hapus_Barang_Entry(id_barang, nama, jenis_pakaian, gender, harga) {

  if (popupAktif) {
    Toastify({
      text: "⚠️ Fokus ke aksi ini terlebih dahulu.",
      duration: 3000,
      gravity: "bottom",
      position: "right",
      style: {
        background: "#fef9c3",       
