<script>
    const ctx = document.getElementById('salesChart').getContext('2d');

const categories = ["Baju", "Celana", "Sepatu", "Kacamata", "Perhiasan", "Tas"];
const salesData = [120, 90, 140, 80, 50, 110]; // Data penjualan

// Perbaikan: Menghitung posisi tren di puncak bar
const trendData = salesData.map((value, index, arr) => 
    index > 0 ? arr[index] : arr[index] // Memastikan nilai tren berada di puncak
);

const barColors = ["#211C84", "#4D55CC", "#7A73D1", "#B5A8D5", "#4D55CC", "#211C84"];
const lineColors = trendData.map((_, index) => index > 0 && salesData[index] >= salesData[index - 1] ? "#2ECC71" : "#E74C3C");

new Chart(ctx, {
    type: 'bar',
    data: {
        labels: categories,
        datasets: [
            {
                type: 'bar',
                label: 'Penjualan',
                data: salesData,
                backgroundColor: barColors,
                borderWidth: 1,
                yAxisID: 'y'
            },
            {
                type: 'line',
                label: 'Tren',
                data: trendData, // Tren kini berada di puncak bar
                borderColor: lineColors,
                borderWidth: 2,
                pointBackgroundColor: lineColors,
                fill: false,
                tension: 0.4,
                yAxisID: 'y' // Gunakan skala y yang sama
            }
        ]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'top'
            }
        },
        scales: {
            y: {
                beginAtZero: true,
            }
        }
    }
});

</script>

